<div class="col-lg-4">
    <div class="title-headline">都道府県別送料 追加</div>
        <% if @prefecture.errors.any? %>
            <div id="error_explanation" class="text-center">
                <h4><%= @prefecture.errors.count %>件のエラーが発生しました。</h4>
                <% @prefecture.errors.full_messages.each do |message| %>
                    <h6><%= message %></h6>
                <% end %>
            </div>
        <% end %>
    <%= form_for(@prefecture) do |f| %>
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-4 nav-text" for="prefucture_name">都道府県:</label>
                <div class="col-sm-8">
                	<%= f.text_field :prefecture_name, class: "form-control", placeholder: "prefucture_name" %>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4 nav-text" for="postage">送料:</label>
                <div class="col-sm-8">
                	<%= f.text_field :postage, class: "form-control", placeholder: "postage" %>
                </div>
            </div>
        </div>
    	<div class="right">
        	<%= f.submit "create", class: "btn btn-warning" %>
    	</div>
    <% end %>
</div>
<%= render 'prefectures/list', prefectures: @prefectures %>
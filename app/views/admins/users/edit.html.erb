<div class="container-fluid">
  <div class="row">
  	<%= render 'users/list', user: @user %>
	<div class="col-lg-9">
	    <div class="main-menu">
			<div class="col-lg-8 col-lg-offset-2">
				<div class="title-headline">基本情報の編集</div>
				<div class="form-horizontal">
					<%= form_for(@user) do |f| %>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="last_name">姓:</label>
						    <div class="col-sm-10">
						    	<%= f.text_field :last_name, class: "form-control", placeholder: "last_name" %>
					    	</div>
					    </div>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="first_name">名:</label>
						    <div class="col-sm-10">
						    	<%= f.text_field :first_name, class: "form-control", placeholder: "first_name" %>
						    </div>
					    </div>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="kana_last_name">カタカナ姓:</label>
						    <div class="col-sm-10">
						    	<%= f.text_field :kana_last_name, class: "form-control", placeholder: "kana_last_name" %>
						    </div>
					    </div>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="kana_first_name">カタカナ名:</label>
						    <div class="col-sm-10">
						    	<%= f.text_field :kana_first_name, class: "form-control", placeholder: "kana_first_name" %>
						    </div>
					    </div>
					    <div class="form-group">
				            <label class="control-label col-sm-2" for="nickname"> ニックネーム:</label>
				            <div class="col-sm-10">
				              <%= f.text_field :nickname, class: "form-control", placeholder: "nickname" %>
				            </div>
				        </div>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="zipcode">郵便番号:</label>
						    <div class="col-sm-10">
						    	<%= f.text_field :zipcode, class: "form-control", placeholder: "zipcode" %>
						    </div>
					    </div>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="prefecture">都道府県:</label>
						    <div class="col-sm-10", style="text-align: left;">
						    	<%= f.collection_select(:prefecture_id, Prefecture.all, :id, :prefecture_name, class: "form-control" ) %>
						    </div>
					    </div>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="address">住所:</label>
						    <div class="col-sm-10">
						    	<%= f.text_field :address, class: "form-control", placeholder: "address" %>
						    </div>
					    </div>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="tel">電話番号:</label>
						    <div class="col-sm-10">
						    	<%= f.text_field :tel, class: "form-control", placeholder: "tel" %>
						    </div>
					    </div>
					    <div class="form-group">
						    <label class="control-label col-sm-2" for="address">メール:</label>
						    <div class="col-sm-10">
						    	<%= f.email_field :email, class: "form-control", placeholder: "e-mail" %>
						    </div>
					    </div>
					    <div class="form-group">
						    <div class="col-sm-offset-2 col-sm-10">
						    	<%= f.submit "update", class: "btn btn-default create" %>
						    </div>
					    </div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <%= render 'users/list', user: current_user %>
	<div class="col-lg-9">
	    <div class="main-menu">
			<div class="col-lg-7 col-lg-offset-2">
				<div class="title-headline">お届け先住所の追加</div>
				<div class="form-horizontal">
					<%= form_for(@delivery) do |f| %>
						<div class="form-group">
						    <label class="control-label col-sm-3" for="zipcode">郵便番号:</label>
						    <div class="col-sm-9">
						    	<%= f.text_field :zipcode, class: "form-control", placeholder: "zipcode" %>
						    </div>
						</div>
						<div class="form-group">
						    <label class="control-label col-sm-3" for="prefecture">都道府県:</label>
						    <div class="col-sm-9", style="text-align:left;">
						    	<%= f.collection_select(:prefecture_id, Prefecture.all, :id, :prefecture_name, prompt: "都道府県を選んで下さい", class: "form-control") %>
						    </div>
						</div>
						<div class="form-group">
						    <label class="control-label col-sm-3" for="address">住所:</label>
						    <div class="col-sm-9">
						    	<%= f.text_area :address, class: "form-control", placeholder: "address" %>
						    </div>
						</div>
					    <div class="form-group">
						    <label class="control-label col-sm-3" for="tel">電話番号:</label>
						    <div class="col-sm-9">
						    	<%= f.text_field :tel, class: "form-control", placeholder: "tel" %>
						    </div>
						</div>
						<div class="form-group">
						    <label class="control-label col-sm-3" for="address">名前</label>
						    <div class="col-sm-9">
						    	<%= f.text_field :name, class: "form-control", placeholder: "name" %>
						    </div>
						</div>
						<div class="form-group">
						    <div class="col-sm-offset-3 col-sm-9">
						    	<%= f.submit "add address", class: "btn btn-default create" %>
						    </div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
  </div>
</div>